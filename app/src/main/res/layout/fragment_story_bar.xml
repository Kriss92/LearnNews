<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.appchee.learnews.StoryBarFragment">

        <Button
            android:id="@+id/cont_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="continue"
            android:layout_alignParentBottom="true"
            android:gravity="center|center_vertical"
            />

        <!-- Story Bar -->
        <LinearLayout
            android:id="@+id/story_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/cont_button"
            >


            <ImageView
                android:id="@+id/newsite_img"
                android:src="@drawable/bbc"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/article_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Headline- this is the headline Heafsdfsdfsdfdline- this is the headline"
                android:layout_weight="10"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/text"/>

            <ImageView
                android:id="@+id/save_story_button"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:src="@drawable/save"/>

            <ImageView
                android:id="@+id/send_story_button"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:src="@drawable/mail"/>

        </LinearLayout>

    </RelativeLayout>

