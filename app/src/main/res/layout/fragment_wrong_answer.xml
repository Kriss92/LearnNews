    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/wrong_answer_view"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.appchee.learnews.WrongAnswerFragment"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Answers -->
        <LinearLayout
            android:id="@+id/rel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20sp">

                <ImageView
                    android:id="@+id/wrong_vi_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vi"
                    android:layout_marginRight="20sp"
                    />

                <TextView
                    android:id="@+id/wrong_ans_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:text="Correct Answer"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/x_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/x"
                    android:layout_marginRight="20sp"
                    />

                <TextView
                    android:id="@+id/wrong_ans_wrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:text="Correct Answer"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/wrong_compliment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/text"/>

        <!-- Story Bar -->
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.appchee.learnews.StoryBarFragment"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/fragment_story_bar"/>

    </LinearLayout>


