    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/wrong_answer_view"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.appchee.learnews.WrongAnswerFragment"
        android:background="@android:color/holo_red_dark"
        android:orientation="vertical">

        <!-- Answers -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/wrong_vi_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vi"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/wrong_ans_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Correct Answer"
                android:layout_toRightOf="@+id/wrong_vi_img"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/x_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/x"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/wrong_ans_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Correct Answer"
                android:layout_toRightOf="@+id/x_img"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/wrong_compliment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Good job!"
            android:gravity="center"/>

        <!-- Story Bar -->
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.appchee.learnews.StoryBarFragment"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/fragment_story_bar"/>

    </LinearLayout>


