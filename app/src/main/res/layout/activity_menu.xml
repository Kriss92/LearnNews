<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:id="@+id/menu_layout">


    <TextView
        android:id="@+id/app_name_menu"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#4364A1"
        android:textSize="63sp"
        android:paddingBottom="40dp"
        android:typeface="serif"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/new_game_menu_button"
        android:text="@string/new_game_menu_button"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/app_name_menu"
        android:onClick="newGameMenuButtonClicked"/>

    <Button
        android:id="@+id/add_questions_menu_button"
        android:text="@string/add_questions_menu_button"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/new_game_menu_button"
        android:layout_marginBottom="40dp"
        android:layout_alignLeft="@id/new_game_menu_button"
        android:onClick="addQuestionsMenuButtonClicked"/>

    <Button
        android:id="@+id/your_stories_menu_button"
        android:text="@string/your_stories_menu_button"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/add_questions_menu_button"
        android:layout_alignLeft="@id/add_questions_menu_button"
        android:onClick="SavedStoriesMenuButtonClicked"/>

    <Button
        android:id="@+id/sound_menu_button"
        android:text="@string/sound_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/app_name_menu"
        />

    <Button
        android:id="@+id/bookmarks_menu_button"
        android:text="@string/bookmarks_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/achievements_menu_button"
        android:text="@string/achievements_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bookmarks_menu_button"
        />



</RelativeLayout>